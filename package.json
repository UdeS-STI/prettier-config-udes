{
  "name": "prettier-config-udes",
  "version": "0.0.1",
  "description": "Prettier shareable config for the UdeS style guide",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "format": "npm-run-all format:*",
    "format:eslint": "eslint --ignore-path .gitignore . --ext js --fix",
    "format:prettier": "prettier --ignore-path .gitignore --config=index.js --write *",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "eslint --ignore-path .gitignore . --ext js",
    "lint:prettier": "prettier --ignore-path .gitignore --check *"
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index -g",
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/UdeS-STI/prettier-config-udes.git"
  },
  "keywords": [
    "udes",
    "code",
    "code style",
    "enforce",
    "quality",
    "strict",
    "style",
    "config",
    "prettier"
  ],
  "author": "Universit√© de Sherbrooke",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/UdeS-STI/prettier-config-udes/issues"
  },
  "homepage": "https://github.com/UdeS-STI/prettier-config-udes",
  "dependencies": {
    "prettier": "^2.0.5",
    "@prettier/plugin-php": "^0.14.0"
  },
  "devDependencies": {
    "eslint-config-udes": "^0.4.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5"
  }
}
